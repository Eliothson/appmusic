<%- include ('header')-%>

<div class="container">
  <br>
  <div class="text-center">
    <h1><%= user.nom %> <%=  user.prenom%> </h1> 
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-12 text-center">
      <br>
      <img src="/assets/img/profile.jpg" class="rounded-circle" width="50%" alt="">
      <br>
        <ul class="playlist-filter controls">
          <li class="control" data-filter=".parametre">Profile</li>
          <li class="control" data-filter=".offres">Offres </li>
          <li class="control" data-filter=".projets">Projets</li>
          <li class="control" data-filter=".freepacks">Free Packs</li>
          <li class="control" data-filter=".freetracks"> Free Tracks</li>
          <li class="control" data-filter=".sonavendre">Son a vendre </li>
        </ul>
    </div>

    <div class="col-md-8 col-sm-12" ">

      <br>
      <div class="text-center">
         <img src="/assets/img/undraw_more_music_w70e.png"  width="50%" alt="">
      </div>
      <div class="text-center">
      <a href="/ajout?var=offre" class="btn btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> <strong> Creer un Offre </strong></a> 
       <a href="/ajout?var=projet" class="btn btn-danger"> <i class="fa fa-plus" aria-hidden="true"></i> <strong> Nouveau Projet</strong> </a> 
       <a href="/ajout?var=son" class="btn btn-info"> <i class="fa fa-plus" aria-hidden="true"></i> <strong> Ajouter Des son</strong>  </a> 
       <a href="/ajout?var=track" class="btn btn-warning"> <i class="fa fa-plus" aria-hidden="true"></i> <strong>Ajouter des Track </strong> </a> 

     </div>
     <hr>
      <div class="row playlist-area">

        <% if(locals.useroffre){
        useroffre.forEach(function (useroffres){ %>
        <div class=" mix col-lg-4 col-md-4 col-sm-6 offres">
          
          <div class="card playlist-item">
            <br>
            <h5><%= useroffres.titre%> </h5>
            <p> <%= useroffres.titre%></p>
           <p> <strong> <%= useroffres.budget %></strong></p> 
            <a href="/offres/<%=useroffres._id %>"> <div class=" btn btn-warning"> Voir</div></a>
            <br>

          </div>
        </div>
        <%})}%>




      </div>
    </div>
  </div>

  




</div>









<%- include ('footer')-%>