<%-include ('header')-%>
<div style="background-color: rgb(250, 250, 248);" class="section">
  <br><br>
  <div class="container text-center">
    <div class="row">
      <div style="padding: 10px;" class="col-lg-2 col-md-4 col-sm-4 col-4 recent">
        <a class="btn btn-success" class="control" data-filter="all">Tout</a>
      </div>
      <div style="padding: 10px;"  class="col-lg-2 col-md-4 col-sm-4 col-4 recent">
        <a class="btn btn-primary" class="control" data-filter=".chere">Plus Cheres</a>
      </div>
      <div style="padding: 10px;"  class="col-lg-2 col-md-4 col-sm-4 col-4 recent">
