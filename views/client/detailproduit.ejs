<%- include ('header')-%>

<section class="contact-section">
  <div class="container" style="padding: 10%;">
    <div class="row">
      <div class="col-lg-6 p-0">
        <div class="text-center">
          <img src="assets/img/songs/2.jpg" alt="">
        </div>
        <div class="section-title mb-0">
          <h2>Tambour</h2>
        </div>
        <p>Son Pour Compa </p>
        <div class="text-center">
          <img src="/assets/img/pay.png" alt="">
        </div>
      </div>
      <div class="col-lg-6 p-0">
        <div class="section-title mb-0">
          <h2>Methode de Paiement</h2>
        </div>

        <p>Choisir Une methgode de paiememnt pour payer votre son </p>
        <div class="row">
          <div class="col-lg-3">
             <div class="text-center" style="padding-top: 50%;">
                <img src="/assets/img/MC_button_fr.png" alt="">
              </div>
          </div>
          <div class="col-lg-5">
            <div class="mx-auto">
              <div id="paypal-button-container"></div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="text-center">
              <img src="/assets/img/cashmobile.png" alt="">
            </div>
          </div>
        </div>
       
        <br>
        
        
        <script src="https://www.paypal.com/sdk/js?client-id=sb&currency=USD" data-sdk-integration-source="button-factory"></script>
        <script>
          paypal.Buttons({
              style: {
                  shape: 'rect',
                  color: 'gold',
                  layout: 'vertical',
                  label: 'paypal',  
              },
              createOrder: function(data, actions) {
                  return actions.order.create({
                      purchase_units: [{
                          amount: {
                              value: '1'
                          }
                      }]
                  });
              },
              onApprove: function(data, actions) {
                  return actions.order.capture().then(function(details) {
                      alert('Transaction completed by ' + details.payer.name.given_name + '!');
                  });
              }
          }).render('#paypal-button-container');
        </script>



      </div>
    </div>
  </div>
  <br><br>

</section>





<%- include ('footer')-%>